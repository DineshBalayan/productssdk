<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/margin1">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/benefit_icon"
        android:layout_width="@dimen/margin12"
        android:layout_height="@dimen/margin12"
        android:src="@drawable/ic_diamond"
        android:layout_marginEnd="@dimen/margin4"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/benefit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:lines="1"
        android:maxLines="1"
        tools:text="Last Update"
        android:textColor="@color/black"
        android:layout_marginEnd="@dimen/margin4"
        android:textSize="@dimen/text12" />
</androidx.appcompat.widget.LinearLayoutCompat><!--</layout>-->